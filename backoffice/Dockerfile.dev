# Backoffice Development Dockerfile
FROM node:18-alpine

# Install dependencies and pnpm globally
RUN apk add --no-cache libc6-compat && \
    npm install -g pnpm

# Set working directory
WORKDIR /app

# Copy only package files first to leverage Docker cache
COPY package.json pnpm-workspace.yaml .npmrc ./
COPY shared/package.json ./shared/
COPY frontend/package.json ./frontend/
COPY backoffice/package.json ./backoffice/
COPY backend/package.json ./backend/

# Install dependencies for shared package
WORKDIR /app/shared
COPY shared/. .
RUN pnpm install
RUN pnpm build

# Install backoffice dependencies
WORKDIR /app/backoffice
COPY backoffice/. .
RUN pnpm install && \
    pnpm install -D tailwindcss postcss autoprefixer && \
    pnpm tailwindcss init -p

# Set environment variables
ENV NODE_ENV=development \
    PORT=3002 \
    HOSTNAME="0.0.0.0" \
    NEXT_TELEMETRY_DISABLED=1 \
    NEXT_PUBLIC_BACKEND_URL=http://localhost:3001 \
    NEXT_PUBLIC_STELLAR_NETWORK=testnet \
    NEXT_PUBLIC_STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org

# Expose port
EXPOSE 3002

# Start development server with proper host binding
CMD ["sh", "-c", "pnpm dev --port 3002 --hostname 0.0.0.0"] 