# Server Configuration
PORT=3001
NODE_ENV=production
HOSTNAME=0.0.0.0

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/dob_validator?schema=public"

# JWT Configuration
JWT_SECRET="your-production-jwt-secret"
JWT_EXPIRATION="24h"

# Stellar Network Configuration
STELLAR_NETWORK="testnet" # or "public" for mainnet
STELLAR_HORIZON_URL="https://horizon-testnet.stellar.org"

# File Storage Configuration
UPLOAD_DIR="/app/uploads"
MAX_FILE_SIZE="10mb"

# Rate Limiting
RATE_LIMIT_WINDOW="15m"
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"

# Security
CORS_ORIGINS="https://your-frontend-domain.com,https://your-backoffice-domain.com"
TRUST_PROXY=1

# Admin Configuration
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="your-secure-admin-password" 